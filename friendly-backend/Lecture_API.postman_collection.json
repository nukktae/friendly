{
  "info": {
    "name": "Lecture Recording API",
    "description": "API collection for testing lecture recording features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user123",
      "type": "string"
    },
    {
      "key": "lectureId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Create Lecture",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"title\": \"Math 101 - Linear Algebra\",\n  \"description\": \"Introduction to linear algebra concepts\",\n  \"tags\": [\"math\", \"linear-algebra\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('lectureId', jsonData.lectureId);",
              "    console.log('Lecture ID saved:', jsonData.lectureId);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "2. Start Lecture",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"title\": \"Math 101 - Linear Algebra\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/start",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "start"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('lectureId', jsonData.lectureId);",
              "    console.log('Lecture ID saved:', jsonData.lectureId);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "3. Upload Audio Chunk",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "audio",
              "type": "file",
              "src": []
            },
            {
              "key": "userId",
              "value": "{{userId}}",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/transcribe-chunk",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "transcribe-chunk"]
        }
      }
    },
    {
      "name": "4. Upload Complete Audio",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "audio",
              "type": "file",
              "src": []
            },
            {
              "key": "userId",
              "value": "{{userId}}",
              "type": "text"
            },
            {
              "key": "duration",
              "value": "720",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/upload",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "upload"]
        }
      }
    },
    {
      "name": "5. Transcribe Audio",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/transcribe",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "transcribe"]
        }
      }
    },
    {
      "name": "6. Generate Summary",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/summary",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "summary"]
        }
      }
    },
    {
      "name": "7. Get Lecture",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}?userId={{userId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}"],
          "query": [
            {
              "key": "userId",
              "value": "{{userId}}"
            }
          ]
        }
      }
    },
    {
      "name": "8. Update Checklist - Toggle",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"toggle\": {\n    \"id\": \"item_1234567890_0\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/checklist",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "checklist"]
        }
      }
    },
    {
      "name": "8b. Update Checklist - Add",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"add\": {\n    \"text\": \"Complete homework assignment 3\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/checklist",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "checklist"]
        }
      }
    },
    {
      "name": "8c. Update Checklist - Edit",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"edit\": {\n    \"id\": \"item_1234567890_0\",\n    \"text\": \"Complete practice problems (revised)\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/checklist",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "checklist"]
        }
      }
    },
    {
      "name": "8d. Update Checklist - Delete",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"delete\": {\n    \"id\": \"item_1234567890_0\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}/checklist",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}", "checklist"]
        }
      }
    },
    {
      "name": "9. Chat with AI",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"question\": \"What are the main topics covered in my lectures?\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/lectures/chat",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "chat"]
        }
      }
    },
    {
      "name": "10. Get All Lectures (with filters)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/lectures?userId={{userId}}&status=completed&limit=10&offset=0",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures"],
          "query": [
            {
              "key": "userId",
              "value": "{{userId}}",
              "description": "Filter by user ID"
            },
            {
              "key": "status",
              "value": "completed",
              "description": "Filter by status (draft, recording, processing, completed, failed)",
              "disabled": true
            },
            {
              "key": "limit",
              "value": "10",
              "description": "Number of results",
              "disabled": true
            },
            {
              "key": "offset",
              "value": "0",
              "description": "Pagination offset",
              "disabled": true
            }
          ]
        }
      }
    },
    {
      "name": "11. List User Lectures (with filters)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/lectures/user/{{userId}}?status=completed&limit=10&offset=0",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "user", "{{userId}}"],
          "query": [
            {
              "key": "status",
              "value": "completed",
              "description": "Filter by status",
              "disabled": true
            },
            {
              "key": "limit",
              "value": "10",
              "description": "Number of results",
              "disabled": true
            },
            {
              "key": "offset",
              "value": "0",
              "description": "Pagination offset",
              "disabled": true
            }
          ]
        }
      }
    },
    {
      "name": "12. Delete Lecture",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/lectures/{{lectureId}}?userId={{userId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "lectures", "{{lectureId}}"],
          "query": [
            {
              "key": "userId",
              "value": "{{userId}}"
            }
          ]
        }
      }
    }
  ]
}

