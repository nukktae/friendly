# Server Configuration
PORT=4000

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account",...}'

# Google Drive Backup Configuration
# You can use the same service account as Firebase, or create a separate one
# To use Firebase service account: Extract these from FIREBASE_SERVICE_ACCOUNT_JSON
# Or create a new service account in Google Cloud Console with Drive API enabled
GOOGLE_PROJECT_ID=your_project_id
GOOGLE_CLIENT_EMAIL=your_service_account_email@project_id.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# Optional: If you want to use a specific folder ID instead of folder name
# GOOGLE_DRIVE_BACKUP_FOLDER_ID=your_folder_id

# Backup Settings
# Set to false to disable automatic daily backups
ENABLE_DRIVE_BACKUP=true

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_ACCESS_TOKEN=your_access_token
GOOGLE_REFRESH_TOKEN=your_refresh_token

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key

